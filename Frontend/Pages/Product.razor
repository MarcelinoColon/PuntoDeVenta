@page "/products"
@using Frontend.Client
@inject ApiClient Api
@inject NavigationManager Nav
@inject IJSRuntime js

<h3>Productos</h3>

@if (isLoading)
{
    <p>Cargando...</p>
}
else
{

    @if (error is not null)
    {
        <div class="alert alert-danger">
            @error
        </div>
    }

    <button class="btn btn-primary" @onclick='() => Nav.NavigateTo("/products/frmproduct")'>Crear Producto</button>

    <hr />

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th style="width: 220px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>
                        <button class="btn btn-secondary btn-sm me-2"
                                @onclick='() => Nav.NavigateTo($"/products/frmproduct/{product.Id}")'>
                            Editar
                        </button>

                        <button class="btn btn-danger btn-sm" disabled="@isBusy"
                        @onclick="()=>DeleteAsync(product.Id.Value)">
                            Eliminar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<ProductDto> products = null;
    private bool isLoading;
    private bool isBusy;
    private string? error = null;

    private async Task<bool> ConfirmAsync(string message)
    => await js.InvokeAsync<bool>("confirm", message);

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        try
        {
            isLoading = true;
            error = null;
            products = await Api.GetproductAsync();

        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DeleteAsync(int id)
    {
        if(!await ConfirmAsync("Eliminar producto?"))
        {
            return;
        }

        try
        {
            isBusy = true;
            error = null;
            await Api.DeleteproductAsync(id);
            await LoadAsync();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            isBusy = false;
        }
    }
}
